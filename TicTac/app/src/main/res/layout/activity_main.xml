            android:layout_height="80dp"
            android:onClick="buttonClick" />

        <Button
            android:id="@+id/b8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="buttonClick" />

        <Button
            android:id="@+id/b9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="buttonClick" />
    </TableRow>

</TableLayout>
